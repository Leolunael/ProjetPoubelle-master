{% extends 'base.html.twig' %}

{% block title %}Ajouter un centre de recyclage{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <h1 class="mb-4">üóëÔ∏è Ajouter un centre de recyclage</h1>

                {{ form_start(form, {'attr': {'aria-label': 'Formulaire d\'ajout de centre'}}) }}

                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div class="mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {
                                'attr': {
                                    'class': 'form-control',
                                    'aria-label': field.vars.label
                                }
                            }) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg" aria-label="Ajouter ce centre">
                        ‚úÖ Ajouter le centre
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

